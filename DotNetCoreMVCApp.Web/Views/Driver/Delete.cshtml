@model DotNetCoreMVCApp.Models.Repository.Driver
@{
    ViewData["Title"] = "Delete Driver";
}

<style>
    .button-container {
        margin-top: 20px;
    }

    .details-container {
        background-color: #f8f9fa;
        padding: 20px;
        border-radius: 5px;
        margin-bottom: 20px;
    }

    .warning-text {
        color: #dc3545;
    }

    dt {
        font-weight: 600;
    }
</style>

<div class="content-header">
    <div class="container-fluid">
        <h1>Delete Driver</h1>
        <h3 class="warning-text">Are you sure you want to delete this driver?</h3>
    </div>
</div>

<div class="content">
    <div class="container-fluid">
        <div class="details-container">
            <h4>Driver Details</h4>
            <hr />
            <dl class="row">
                <dt class="col-sm-3">
                    Staff ID
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Id)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Name)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Name)
                </dd>

                <dt class="col-sm-3">
                    Qatar ID
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.QatarId)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.ContactNumber)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.ContactNumber)
                </dd>

                <dt class="col-sm-3">
                    QID Expiry Date
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.QIDExpiryDate)
                </dd>

                <dt class="col-sm-3">
                    @Html.DisplayNameFor(model => model.Nationality)
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.Nationality)
                </dd>

                <dt class="col-sm-3">
                    Date of Birth
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.DOB)
                </dd>

                <dt class="col-sm-3">
                    Created By
                </dt>
                <dd class="col-sm-9">
                    @Html.DisplayFor(model => model.CreatedBy)
                </dd>

                <dt class="col-sm-3">
                    Created On
                </dt>
                <dd class="col-sm-9">
                    @(Model.CreatedOn.HasValue ? Model.CreatedOn.Value.ToString("dd/MM/yyyy HH:mm") : "-")
                </dd>

                <dt class="col-sm-3">
                    Last Updated By
                </dt>
                <dd class="col-sm-9">
                    @(string.IsNullOrEmpty(Model.UpdatedBy) ? "-" : Model.UpdatedBy)
                </dd>

                <dt class="col-sm-3">
                    Last Updated On
                </dt>
                <dd class="col-sm-9">
                    @(Model.UpdatedOn.HasValue ? Model.UpdatedOn.Value.ToString("dd/MM/yyyy HH:mm") : "-")
                </dd>
            </dl>

            <div class="alert alert-warning">
                <i class="fas fa-exclamation-triangle"></i>
                <strong>Warning:</strong> This action cannot be undone. All data associated with this driver will be permanently deleted.
            </div>

            <form asp-action="Delete" onsubmit="return confirmDelete()">
                @Html.AntiForgeryToken()
                <input type="hidden" asp-for="Id" />
                <div class="button-container">
                    <button type="submit" class="btn btn-danger">
                        <i class="fas fa-trash"></i> Delete
                    </button>
                    <a asp-action="Index" class="btn btn-secondary">
                        <i class="fas fa-arrow-left"></i> Back to List
                    </a>
                </div>
            </form>
        </div>
    </div>
</div>

@section Scripts {
    <script>
        function confirmDelete() {
            return confirm('Are you absolutely sure you want to delete this driver? This action cannot be undone.');
        }
    </script>
}