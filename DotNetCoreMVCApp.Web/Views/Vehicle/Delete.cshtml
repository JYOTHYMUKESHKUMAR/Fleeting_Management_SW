@model DotNetCoreMVCApp.Models.Repository.Vehicle
@{
    ViewData["Title"] = "Delete Vehicle";
}

<style>
    .button-container {
        position: relative;
        padding-top: 20px;
    }

    .btn-top-right {
        position: absolute;
        top: 0;
        right: 0;
    }
</style>

<div class="button-container">
    <a asp-action="Index" class="btn btn-secondary btn-top-right">Back to List</a>
</div>

<section class="content-header">
    <div class="container-fluid">
        <div class="row mb-2">
            <div class="col-sm-6">
                <h1>Delete Vehicle</h1>
                <h3 class="text-danger">Are you sure you want to delete this vehicle?</h3>
            </div>
        </div>
    </div>
</section>

<section class="content">
    <div class="container-fluid">
        <div class="row">
            <div class="col-md-8">
                <div class="card card-danger">
                    <div class="card-header">
                        <h3 class="card-title">Vehicle Details</h3>
                    </div>
                    <div class="card-body">
                        <dl class="row">
                            <dt class="col-sm-3">
                                Vehicle ID
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.VehicleId)
                            </dd>
                            <dt class="col-sm-3">
                                License Plate
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.LicensePlate)
                            </dd>
                            <dt class="col-sm-3">
                                Woqod License Plate
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.WoqodLicensePlate)
                            </dd>
                            <dt class="col-sm-3">
                                GPS Code
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.GPSCode)
                            </dd>
                            <dt class="col-sm-3">
                                Vehicle Type
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.VehicleType)
                            </dd>
                            <dt class="col-sm-3">
                                Vehicle Brand
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.VehicleBrand)
                            </dd>
                            <dt class="col-sm-3">
                                Vehicle Model
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.VehicleModel)
                            </dd>
                            <dt class="col-sm-3">
                                Year
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.Year)
                            </dd>
                            <dt class="col-sm-3">
                                Fuel Tank Capacity (L)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.FuelTankCapacity)
                            </dd>
                            <dt class="col-sm-3">
                                Fuel Limit (L)
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.FuelLimit)
                            </dd>
                            <dt class="col-sm-3">
                                Registration Expiry
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.RegistrationExpiryDate)
                            </dd>
                            <dt class="col-sm-3">
                                Insurance Policy No
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.InsurancePolicyNo)
                            </dd>
                            <dt class="col-sm-3">
                                Insurance Policy Expiry
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.InsurancePolicyExpiry)
                            </dd>
                            <dt class="col-sm-3">
                                Created By
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.CreatedBy)
                            </dd>
                            <dt class="col-sm-3">
                                Created On
                            </dt>
                            <dd class="col-sm-9">
                                @Html.DisplayFor(model => model.CreatedOn)
                            </dd>
                            @if (!string.IsNullOrEmpty(Model.UpdatedBy))
                            {
                                <dt class="col-sm-3">
                                    Updated By
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.UpdatedBy)
                                </dd>
                                <dt class="col-sm-3">
                                    Updated On
                                </dt>
                                <dd class="col-sm-9">
                                    @Html.DisplayFor(model => model.UpdatedOn)
                                </dd>
                            }
                        </dl>
                    </div>
                    <div class="card-footer">
                        <form asp-action="Delete">
                            @Html.AntiForgeryToken()
                            <input type="hidden" asp-for="VehicleId" />
                            <button type="submit" class="btn btn-danger">Delete</button>
                            <a asp-action="Index" class="btn btn-secondary">Cancel</a>
                        </form>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>