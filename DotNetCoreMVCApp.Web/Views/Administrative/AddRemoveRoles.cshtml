@model List<ManageRolesViewModel>

<p>
    <a asp-action="Create">Create New</a>
</p>

<div>
    <p>
        <h5>@ViewBag.UserName</h5>
    </p>
</div>

<hr />

<form asp-action="AddRemoveRoles" method="post">
    <input type="hidden" value="@ViewBag.Id" name="UserId">
    <table class="table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.First().RoleId)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().RoleName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.First().IsSelected)
                </th>

            </tr>
        </thead>
        <tbody>
            @for(int i=0;i< Model.Count(); i++)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => Model[i].RoleId)
                        <input type="hidden" asp-for="@Model[i].RoleId">
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem =>  Model[i].RoleName)
                        <input type="hidden" asp-for="@Model[i].RoleName">
                    </td>
                    <td>
                        <input type="checkbox" asp-for="@Model[i].IsSelected">
                    </td>
                </tr>
            }
        </tbody>
    </table>
    <input type="submit" class="btn btn-success" value="AddRemoveRoles" />
</form>